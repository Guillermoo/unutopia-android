<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle" >

    <!-- Las esquinas redondeadas -->
    <corners android:radius="20dp" />

    <!-- El borde -->
    <stroke
        android:width="4dp"
        android:color="#6B6D6B" />
    
    <!-- Color de relleno -->
    <solid android:color="#90D5D7D5" />
 
    <!-- Para que no se quede pegado al texto -->
     <padding
     android:bottom="10dp"
     android:left="10dp"
     android:right="10dp"
     android:top="10dp" />
</shape>